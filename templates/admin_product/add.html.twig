{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block body %}
<div class="container">
    <h1>Ajouter un produit</h1>

    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

    <div class="mb-3">
        {{ form_label(form.name, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le nom du produit'}}) }}
        {{ form_errors(form.name) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.price, 'Prix', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.price, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le prix du produit'}}) }}
        {{ form_errors(form.price) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Entrez la description du
        produit'}}) }}
        {{ form_errors(form.description) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.picture, 'Image', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.picture, {'attr': {'class': 'form-control', 'placeholder': 'Entrez l\'URL de l\'image'}}) }}
        {{ form_errors(form.picture) }}
    </div>

    <div class="mb-3 form-inline">
        {{ form_label(form.createdAt, 'Date de création', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.createdAt, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.createdAt) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.categoryId, 'Catégorie', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.categoryId, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.categoryId) }}
    </div>

    <button type="submit" class="btn btn-info">Ajouter le produit</button>

    {{ form_end(form) }}
</div>
{% endblock %}